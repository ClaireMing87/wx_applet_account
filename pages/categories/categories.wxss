.container {
  padding: 10rpx 0 20rpx;
}

.card {
  border-radius: 16rpx;
  padding: 15rpx;
  margin: 8rpx 15rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  background: #fff;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
}

.category-top + .category-top {
  margin-top: 10rpx;
}

.top-row {
  display: flex;
  align-items: center;
  padding: 14rpx 8rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
}

.top-row .icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.top-row .name {
  flex: 1;
  font-size: 26rpx;
}

.top-row .arrow {
  color: #999;
}

.sub-list {
  padding: 8rpx 8rpx 0 46rpx;
}

.sub-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.sub-item:last-child {
  border-bottom: 0;
}

.sub-icon {
  margin-right: 10rpx;
}

.sub-name {
  font-size: 24rpx;
}


/* 添加按钮样式 */
.add-item {
  color: #007aff;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal {
  width: 620rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.modal-section + .modal-section {
  margin-top: 16rpx;
}

.modal-input {
  width: 100%;
  background: #f7f7f7;
  border-radius: 12rpx;
  padding: 16rpx;
}

.icon-grid {
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  gap: 12rpx;
}

.icon-cell {
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  background: #f5f5f5;
}

.icon-cell.active {
  background: #e6f0ff;
  outline: 2rpx solid #007aff;
}

.modal-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  gap: 12rpx;
}

.btn.confirm {
  background: #007aff;
  color: #fff;
}


