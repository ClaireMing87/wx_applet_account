.container {
  padding: 16rpx;
}
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 12rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}
.section-title {
  font-size: 28rpx;
  font-weight: 600;
}
.form-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}
.label {
  width: 160rpx;
  color: #555;
}
.input {
  flex: 1;
  height: 70rpx;
  background: #f7f8fa;
  border-radius: 10rpx;
  padding: 0 16rpx;
}
.diff-box {
  flex: 1;
  height: 70rpx;
  display: flex;
  align-items: center;
  padding: 0 16rpx;
  background: #fff7e6;
  color: #ad6800;
  border-radius: 10rpx;
  border: 1rpx solid #ffe7ba;
}
.hint {
  color: #888;
  font-size: 22rpx;
  margin: 10rpx 0 16rpx;
}
