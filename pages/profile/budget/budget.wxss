.btn-primary {
  background: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  
  /* 核心代码 */
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;     /* 垂直居中 */
  
  /* 推荐使用 padding 来控制按钮大小，而不是固定 height */
  padding: 0 30rpx;
  height: 76rpx; /* 仍然可以保留 height 来限制最小高度 */
}
.desc {
  color: #666;
  line-height: 1.6;
}

