<view class="container">
  <!-- 用户信息 -->
  <view class="card user-info">
    <view class="flex-center">
      <view class="avatar" wx:if="{{userInfo.avatarUrl}}">
        <image src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
      </view>
      <view class="avatar default-avatar" wx:else>
        <text class="avatar-emoji">👤</text>
      </view>
      <view class="user-details">
        <text class="username">{{userInfo.nickName || '未登录'}}</text>
        <text class="user-desc">{{userInfo.nickName ? '欢迎使用J人记账小程序' : '点击登录获取更多功能'}}</text>
      </view>
    </view>
    <button class="login-btn" wx:if="{{!userInfo}}" bindtap="login">登录</button>
  </view>

  <!-- 功能菜单 -->
  <view class="card">
    <view class="menu-list">
      <view class="menu-item" bindtap="goToRecords">
        <view class="menu-left">
          <text class="menu-icon">📊</text>
          <text class="menu-text">全部记录</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
      
      <view class="menu-item" bindtap="goToCategories">
        <view class="menu-left">
          <text class="menu-icon">🏷️</text>
          <text class="menu-text">分类管理</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
      
      <view class="menu-item" bindtap="goToBudget">
        <view class="menu-left">
          <text class="menu-icon">💰</text>
          <text class="menu-text">预算设置</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
      
      <view class="menu-item" bindtap="goToExport">
        <view class="menu-left">
          <text class="menu-icon">📤</text>
          <text class="menu-text">数据导出</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
    </view>
  </view>

  <!-- 设置菜单 -->
  <view class="card">
    <view class="menu-list">
      <view class="menu-item" bindtap="goToSettings">
        <view class="menu-left">
          <text class="menu-icon">⚙️</text>
          <text class="menu-text">设置</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
      
      <view class="menu-item" bindtap="goToAbout">
        <view class="menu-left">
          <text class="menu-icon">ℹ️</text>
          <text class="menu-text">关于我们</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
      
      <view class="menu-item" bindtap="goToFeedback">
        <view class="menu-left">
          <text class="menu-icon">💬</text>
          <text class="menu-text">意见反馈</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
      
      <!-- 开发者：清空账单 -->
      <view class="menu-item" bindtap="clearAllRecords">
        <view class="menu-left">
          <text class="menu-icon">🗑️</text>
          <text class="menu-text">清空账单（开发者）</text>
        </view>
        <text class="menu-arrow">></text>
      </view>
    </view>
  </view>

  <!-- 数据统计 -->
  <view class="card">
    <text class="section-title">数据统计</text>
    <view class="stats-grid">
      <view class="stat-item">
        <text class="stat-number">{{totalRecords}}</text>
        <text class="stat-label">总记录数</text>
      </view>
      <view class="stat-item">
        <text class="stat-number">{{totalDays}}</text>
        <text class="stat-label">记账天数</text>
      </view>
      <view class="stat-item">
        <text class="stat-number">{{avgDaily}}</text>
        <text class="stat-label">日均支出</text>
      </view>
    </view>
  </view>

  <!-- 版本信息 -->
  <view class="version-info">
    <text class="version-text">记账小程序 v1.0.0</text>
  </view>
</view>
